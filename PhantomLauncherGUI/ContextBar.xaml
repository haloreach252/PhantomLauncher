<UserControl x:Class="PhantomLauncherGUI.ContextBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhantomLauncherGUI"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="1280">
    <Grid>
        <Rectangle x:Name="contextBarBackground" Fill="#FF383838"/>
        <StackPanel x:Name="contextBarLayout" Orientation="Horizontal">
            <Button x:Name="contextLibraryButton" Content="Game Library" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Width="180" Height="50"
                FontFamily="BIGMACCA, ./Fonts/#BIGMACCA" FontSize="16" Click="ContextMenuClick" Background="#FF292929" Foreground="#FFC1C1C1" Tag="library"/>
        </StackPanel>
        
    </Grid>
</UserControl>
